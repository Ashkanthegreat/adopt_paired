<body>
  <h2>All Shelters</h2>

  <% @shelters.each do |shelter| %>
    <h3><%= link_to shelter.name, "/shelters/#{shelter.id}" %></h3>
    <%= link_to "Edit #{shelter.name}", "/shelters/#{shelter.id}/edit" %><br>
    <%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %>
  <% end %>

  <footer><%= link_to "New Shelter", "/shelters/new" %></footer>
</body>
