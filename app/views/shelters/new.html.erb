<h1><%= link_to "Shelter List", "/shelters" %></h1>
<h2><%= link_to "Pet List", "/pets" %></h2>
<h3>Create a new Shelter</h3>

<%= form_tag "/shelters" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :address %>
  <%= text_field_tag :address %>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip %>
  <%= submit_tag "Create Shelter" %>
<% end %>
