<h1><%= link_to "Shelter List", "/shelters" %></h1>
<h2><%= link_to "Pet List", "/pets" %></h2>
<h3><%= @shelter.name %></h3>

<p>Address: <%= @shelter.address %></p>
<p>City: <%= @shelter.city %></p>
<p>State: <%= @shelter.state %></p>
<p>Zip: <%= @shelter.zip %></p>

<p><%= link_to "Update Shelter", "/shelters/#{@shelter.id}/edit" %></p>

<p><%= link_to "Delete Shelter", "/shelters/#{@shelter.id}", method: :delete%></p>

<footer><%= link_to "All Pets Here", "/shelters/#{@shelter.id}/pets" %></footer>

<% @shelter.reviews.each do |review| %>
 <p><%= review.title %></p>
 <p><%= review.rating %></p>
 <p><%= review.content %></p>
  <% if review.pic != nil %>
  <img src=<%= review.pic %>
  <% end %>
<% end %>  
